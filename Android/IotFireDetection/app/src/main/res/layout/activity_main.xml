<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutWrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/colorStateLow"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageViewState"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:src="@drawable/state_fire_low"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewStateTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_state_low_24dp" />

        <TextView
            android:id="@+id/txtStateTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Sıcaklık"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewStateAirQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_state_medium_24dp" />

        <TextView
            android:id="@+id/txtStateAirQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Hava Kalitesi"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewStateAlcohol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_state_high_24dp" />

        <TextView
            android:id="@+id/txtStateAlcohol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Alkol"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Son Güncelleme Tarihi"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/txtUpdatedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13/08/2018 13:08"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Otomatik olarak her 20sn de güncelleniyor)"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/txtJsonResponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="txtJsonResponse"
        android:visibility="gone" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnUpdate"
        android:text="Güncelle"/>
</LinearLayout>